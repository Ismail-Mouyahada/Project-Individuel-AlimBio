@inject SignInManager<IdentityUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="nav nav-pills flex-column gap-2">
    <li class="nav-item"><a class="nav-link   @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">Profile</a></li>
    <li class="nav-item"><a class="nav-link   @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">Adresse E-mail</a></li>
    <li class="nav-item"><a class="nav-link   @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">Mot de passe</a></li>
    @if (hasExternalLogins)
    {
        <li id="external-logins" class="nav-item  "><a id="external-login" class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">Connexion exterieurs</a></li>
    }
    <li class="nav-item"><a class="nav-link  @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="two-factor" asp-page="./TwoFactorAuthentication">Authentication en 2 étapes</a></li>
    <li class="nav-item"><a class="nav-link  @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">Données personnelles</a></li>
</ul>

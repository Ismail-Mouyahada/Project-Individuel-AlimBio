@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@model AlimBio.Models.Service

@{
    ViewData["Title"] = "Confiramtion de suppression";
}
<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs bg-danger rounded-0">
        <div class="container">
            <div class="d-flex justify-content-center align-items-center">
                <h6 class="text-white">Confirmation de suppression</h6>

            </div>
        </div>
    </section><!-- End Breadcrumbs -->

<h5 class="p-2 text-muted m-2">Êtes-vous sûre de bien vouloir supprimé cet enregistrement ?</h5>
<div class="card p-2">
<div class=" col-md-6 m-2 card-body shadow py-4">
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Couleur)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Couleur)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Icon)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Icon)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomService)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomService)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Site)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Site.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Entreprise)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Entreprise.Id)
        </dd>
    </dl>

</div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-red" />
        <a class="btn btn-green my-1" asp-action="Index"><i class="fa fa-arrow-left"></i></a>
    </form>
</div>
</main><!-- End #main -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger" role="alert">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <span>@error.ErrorMessage</span>

            <br />
        }
    </div>
}

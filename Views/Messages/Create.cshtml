@model AlimBio.Models.Message

@{
    ViewData["Title"] = "Create";
}
<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Entreprise</h2>
                <ol>
                    <li><a href="#">Accueil</a></li>
                    <li><a href="#">Entreprises/details</a></li>
                    <li>Details d'entreprise </li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs -->
     
    <section id="portfolio-details" class="portfolio-details">
    <div class="container" data-aos="fade-up">
    <div class="row gy-4">
    <div class="col-lg-6">
        <div class="portfolio-info">
            <h3>Creation - Service </h3>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Sujet" class="control-label"></label>
                    <input asp-for="Sujet" class="form-control" />
                    <span asp-validation-for="Sujet" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Details" class="control-label"></label>
                    <textarea asp-for="Details" class="form-control"></textarea>
                    <span asp-validation-for="Details" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SalarieId" class="control-label"></label>
                    <select asp-for="SalarieId" class ="form-control" asp-items="ViewBag.SalarieId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Envoyer" class="btn btn-green p-2 my-2" />
                                <a class="btn btn-green my-2" asp-action="Index"> <i class="fa fa-arrow-left"></i></a>
                </div>
            </form>
        

        </div>
    </div>
    </div>
    </div>
    </section><!-- End   Details Section -->
</main>
 
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

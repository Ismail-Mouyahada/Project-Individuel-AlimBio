@model IEnumerable<AlimBio.Models.Entreprise>

@{
    ViewData["Title"] = "Index";
}


<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h2>Service</h2>
                <ol>
                    <li><a href="#">Accueil</a></li>
                    <li><a href="#">Services/details</a></li>
                    <li>Details de service </li>
                </ol>
            </div>
        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Portfolio Details Section ======= -->
    <section id="portfolio-details" class="portfolio-details">
        <div class="container" data-aos="fade-up">
            <a class="btn btn-green my-2" asp-action="Create"> + nouvelle entreprise </a>
            <div class="row gy-4">
                @foreach( var item in Model)
                {
                    <div class="col-lg-6">
                        <div class="portfolio-info">
                            <h3>Information - Service </h3>
                            <ul>
                                <li><strong>Nom de service</strong>:  @Html.DisplayNameFor(model => model.NomEntreprise)</li>
                            </ul>
                            <ul>
                                <li>
                                    <a class="btn btn-blue" asp-action="Index"><i class="fas fa-arrow-left"></i></a>
                                    <a class="btn btn-orange" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pen"></i></a> 
                                    <a class="btn btn-green" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-eye"></i></a> 
                                    <a class="btn btn-red" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
                                    
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="portfolio-description">
                            <h2>Description de service</h2>
                            <p>
                                @Html.DisplayNameFor(model => item.AdresseComplet)
                            </p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section><!-- End   Details Section -->

</main><!-- End #main -->
 
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>@ViewData["Title"] - AlimBio</title>
    <meta content='@ViewData["Description"]' name="description">
    <meta content='@ViewData["keywords"]' name="keywords">

    <!-- Favicons -->
    <link href="./favicon.png" rel="icon">
    <link href="./favicon.png" rel="apple-touch-icon">
<!-- styles -->
<!-- base | always include -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">

<!-- Latest compiled and minified JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Roboto:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          rel="stylesheet" />
   <script src='https://api.mapbox.com/mapbox-gl-js/v2.4.1/mapbox-gl.js'></script>
    <link href='https://api.mapbox.com/mapbox-gl-js/v2.4.1/mapbox-gl.css' rel='stylesheet' />


    <link href="~/assets/vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet" asp-append-version="true">
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" asp-append-version="true">
    <link href="~/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet" asp-append-version="true">
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet" asp-append-version="true">
    <link href="~/assets/vendor/remixicon/remixicon.css" rel="stylesheet" asp-append-version="true">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet" asp-append-version="true">
    <link href="~/assets/css/style.css" rel="stylesheet" asp-append-version="true">


</head>
<body>



    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top">
        <div class="container d-flex align-items-center">

            <h1 class="logo me-auto"><a href="/"><span>Alimo</span>Bio</a></h1>

            <nav id="navbar" class="navbar order-last order-lg-0">
                <ul>
                    <li><a asp-controller="Home" asp-action="Index" class="active">Accueil</a></li>


                    <li><a asp-area="" asp-controller="Salaries" asp-action="Index">Equipe</a></li>
                    <li><a asp-area="" asp-controller="Services" asp-action="Index">Services</a></li>
                    <li><a asp-area="" asp-controller="Villes" asp-action="Index">Villes</a></li>
                    <li><a asp-area="" asp-controller="Sites" asp-action="Index">Sites</a></li>
                    <li><a asp-area="" asp-controller="Entreprises" asp-action="Index">Entreprises</a></li>
                    <li><a asp-area="" asp-controller="Messages" asp-action="Create">Contact</a></li>
                    <li><a class="bg-dark p-2 rounded-circle" href="/swagger">API</a></li>
                    <partial name="_LoginPartial" />

                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->


        </div>
    </header><!-- End Header -->


    <div class="container-fluid">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- ======= Footer ======= -->
    <footer id="footer">

        <div class="footer-top">
            <div class="container">
                <div class="row">

                    <div class="col-lg-3 col-md-6 footer-contact">
                        <h3>AlimoBio</h3>
                        <p>
                            13 Rue André Callac  <br>
                            Saint-Etienne-du-Rouvray 76000<br>
                            France <br><br>
                            <strong>Tel:</strong> +1 5589 55488 55<br>
                            <strong>E-mail:</strong> info@example.com<br>
                        </p>
                    </div>

                    <div class="col-lg-3 col-md-6 footer-links">
                        <h4>liens outiles</h4>
                        <ul>
                            <li><i class="bx bx-chevron-right"></i> <a href="/">Accueil</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a asp-controller="Services" asp-action="Index">Services</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a asp-controller="Salaries" asp-action="Index">Salariés</a></li>
                            <li> <i class="bx bx-chevron-right"></i> <a asp-controller="Home" asp-action="Privacy">Politique de confidentialité</a></li>
                            <li> <i class="bx bx-chevron-right"></i> <a asp-controller="Home" asp-action="CGV">CGV</a></li>

                        </ul>
                    </div>

                    <div class="col-lg-3 col-md-6 footer-links">
                        <h4>Our Services</h4>
                        <ul>
                            <li><i class="bx bx-chevron-right"></i> <a asp-controller="Services" asp-action="Index">Marketing</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a asp-controller="Services" asp-action="Index">Informatique</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a asp-controller="Services" asp-action="Index">Adminisrateur</a></li>
                        </ul>
                    </div>

                    <div class="col-lg-3 col-md-6 footer-newsletter">
                        <h4>Nous sommes à l'écoute</h4>
                        <p>Pour toute autre demande vous pouvez nous contacter via la formulaire</p>
                         <a asp-controller="Messages" asp-action="Create" class="btn btn-primary">Prendre contact</a>
                    </div>

                </div>
            </div>
        </div>

        <div class="container d-md-flex py-4">

            <div class="me-md-auto text-center text-md-start">
                <div class="copyright">
                    Copyright &copy; <strong><span>Alimobio</span></strong>. tous les droits sont réservés pour <a href="#">AlimBio</a>
                </div>

            </div>

        </div>
    </footer><!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->


    <script src="~/assets/vendor/aos/aos.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets/vendor/waypoints/noframework.waypoints.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>

    <!-- Vendor CSS Files -->
    <!-- Template Main JS File -->
    <script src="~/assets/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)



</body>
</html>

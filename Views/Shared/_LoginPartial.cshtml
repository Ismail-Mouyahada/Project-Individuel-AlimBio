@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link btn btn-green text-white p-2 " asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="fa fa-cog p-2 ml-1"></i> Gestion </a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl='@Url.Action("Index", "Home", new { area = "" })'>
            <button type="submit" class="btn btn-red "><i class="fa fa-sign-out-alt px-2"></i> Déconnexion</button>
        </form>
    </li>

}
else
{
    <li class="nav-item">
        <a class="btn btn-green  " href="/Identity/Account/login?returnUrl=%2F&area=Identity"><i class="fa fa-user px-2"></i> Connexion</a>
    </li>
    <li class="nav-item">
        <a class="btn btn-green  " href="/Identity/Account/register?returnUrl=%2F&area=Identity"><i class="fa fa-key px-2"></i> Inscription </a>
    </li>
}
